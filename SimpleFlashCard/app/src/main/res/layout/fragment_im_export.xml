<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_import"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#DCEDC8"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:contentPadding="4dp"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/textview_cardview_import"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_expand_more_48px"
            android:gravity="center"
            android:text="IMPORT"
            android:textSize="24sp" />

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#DCEDC8"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:contentPadding="4dp">

        <TextView
            android:id="@+id/textview_cardview_export"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_expand_more_48px"
            android:gravity="center"
            android:text="EXPORT"
            android:textSize="24sp" />

    </androidx.cardview.widget.CardView>
</LinearLayout>